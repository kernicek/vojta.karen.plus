    "version": "0.2.0",
    "configurations": [


        {
            "type": "chrome",
            "request": "launch",
            "name": "Run in Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "jekyll",
            "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe"
        }
    ]
}


